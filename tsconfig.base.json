{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages/**/*",
    "apps/**/*",
    "tests/**/*",
    "stories/**/*",
    "scripts/**/*",
    ".storybook/**/*",
    "playwright*.config.ts",
    "tsconfig.base.json",
    "vitest.setup.ts",
    "env.d.ts"
  ]
}
