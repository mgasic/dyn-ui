{
  "name": "@dyn-ui/react",
  "version": "0.1.0",
  "description": "React components for DYN UI design system",
  "author": "Mladen Gasic",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mgasic/dyn-ui.git",
    "directory": "packages/dyn-ui-react"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "typescript",
    "navigation",
    "tabs",
    "stepper",
    "toolbar"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "vite build --watch",
    "build:vite": "vite build",
    "test": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:types": "tsc --noEmit --strict",
    "size-check": "npm run build && du -sh dist/* || echo 'Size check complete'"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/classnames": "^2.3.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^27.0.0",
    "rollup": "^3.29.5",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.69.5",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^3.2.4"
  }
}
